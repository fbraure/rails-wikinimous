<div class="container">
  <h1 class="border-bottom m-4 p-4">
    <%= @article.title %>
    <%= link_to edit_article_path(@article) do %>
      <i class="fas fa-pen"></i>
    <% end %>
    <%= link_to article_path(@article),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </h1>
  <p><%= @article.content %></p>
  <%= link_to "Back", articles_path %>
</div>
